{% extends 'base.html.twig' %}

{% block body %}
    <section class="bg-blue-500 text-white text-center flex flex-col justify-center h-30">
        <h1 class="text-4xl font-bold">Upload your dataset</h1>
    </section>

    <section class="max-w-7xl mx-auto px-4 py-16">
        {{ form_start(form, {'action': path('datasets_temperature_create'), 'method': 'POST'}) }}
        
        <div class="mb-4">
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'bg-white block w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {% if form.name.vars.errors|length > 0 %}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.name) }}
                </div>
            {% endif %}
        </div>

        <div class="mb-4">
            {{ form_label(form.file, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.file, {'attr': {'class': 'bg-white block w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
            {% if form.file.vars.errors|length > 0 %}
                <div class="text-sm text-red-500 mt-1">
                    {{ form_errors(form.file) }}
                </div>
            {% endif %}
        </div>

        <div class="mb-4">
            {{ form_widget(form.submit, {'attr': {'class': 'w-full py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-indigo-500'}}) }}
        </div>
        
        {{ form_end(form) }}
    </section>
{% endblock %}
